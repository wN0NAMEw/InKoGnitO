class Client:
  def __init__(self, name, age, interests, hobbies):
      self.name = name
      self.age = age
      self.interests = interests
      self.hobbies = hobbies
clients = []
def menu():
  print("1. Добавить клиента")
  print("2. Удалить клиента")
  print("3. Поиск работы по интересам")
  print("4. Расчет заработной платы")
  print("5. Расчет процента жизненного успеха")
  print("6. Выход")


def add_client():
  name = input("Введите имя клиента: ")
  age = int(input("Введите возраст клиента: "))
  interests = input("Введите интересы клиента: ")
  hobbies = input("Введите хобби клиента: ")
  client = Client(name, age, interests, hobbies)
  clients.append(client)
  print("Клиент добавлен")
  return main()
def del_client():
  name = input("Введите имя клиента: ")
  for client in clients:
    if client.name == name:
      clients.remove(client)
      print("клиент удален")
      return main()
  print("клиент не найден")

def search_client():
  interests = input("Введите интересы для поиска работы (через запятую): ")
  found_jobs = []
  for client in clients:
      if any(interest in client.interests for interest in interests.split(', ')):
          found_jobs.append(client)

  if found_jobs:
      print("Работы, соответствующие интересам:")
      for job in found_jobs:
          print(job.name)
  else:
      print("Работы, соответствующие интересам, не найдены.")

def  calc_salary():
  position = input("Введите желаемую должность: ")
  salary = len(position) * 1000
  print(f"Примерная заработная плата'{position}': {salary} руб.")


def  calc_percent():
  client_name = input("Введите имя клиента для расчета процента жизненного успеха: ")
  for client in clients:
      if client.name == client_name:
          success_percentage = len(client.interests) * 10
          print(f"Процент жизненного успеха для клиента '{client.name}': {success_percentage}%")
          return
  print("Клиент не найден.")


def main():
  menu()
  choice = input("введите номер действия:")
  if choice == "1":
    add_client()
  elif choice == "2":
    del_client()
  elif choice == "3":
    search_client()
  elif choice == "4":
    calc_salary()
  elif choice == "5":
    calc_percent()
  elif choice == "6":
    exit()
  else:
    print("неверный ввод")
if __name__ in "__main__":
  main()  
